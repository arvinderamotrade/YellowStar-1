<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/toolbarcolor">
    <LinearLayout
        android:id="@+id/ln"
        android:background="@color/toolbarcolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:padding="@dimen/_7sdp"
                    android:src="@drawable/back_arrow"
                    app:tint="@color/toolbartext" />
            </FrameLayout>

            <com.indiasolar.helper.CustomTV
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_18sdp"
                android:text="@string/pending_details"
                android:textColor="@color/toolbartext"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/rect_color"/>
    </LinearLayout>
        <ScrollView
            android:background="@drawable/white_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:orientation="vertical">

                    <com.indiasolar.helper.CustomTVBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="Location Info:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />

                    <com.indiasolar.helper.CustomTV
                        android:id="@+id/txtdetail"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/text"
                        android:textSize="@dimen/_11sdp" />
                    <TextView
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/rec"
                        android:id="@+id/pole_num"
                        android:paddingLeft="@dimen/_5sdp"
                        android:hint="@string/epole"
                        android:layout_gravity="left|center"
                        android:gravity="center|left"
                        android:text=""
                        android:inputType="text"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableTint="@color/black"
                        android:textColorHint="@color/hintcolor"
                        android:drawableLeft="@drawable/poll"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"/>
                    <LinearLayout
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/light_grey"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:layout_margin="@dimen/_1sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                app:cardCornerRadius="@dimen/_10sdp"
                                app:cardBackgroundColor="@color/white"
                                android:backgroundTint="@color/white">
                                <RelativeLayout
                                    android:id="@+id/linear1"
                                    android:paddingTop="@dimen/_5sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_80sdp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentLeft="true"
                                        android:layout_centerInParent="true"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:layout_marginRight="@dimen/_70sdp"
                                        android:orientation="vertical">

                                        <com.indiasolar.helper.CustomTVBold
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="Scan Luminary QR"
                                            android:textColor="@color/black"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:textSize="@dimen/_15sdp"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerInParent="true"
                                        android:layout_marginRight="@dimen/_5sdp">

                                        <ImageView
                                            android:id="@+id/image1"
                                            android:layout_width="@dimen/_60sdp"
                                            android:layout_height="@dimen/_60sdp"
                                            android:layout_centerInParent="true"
                                            android:layout_gravity="center"
                                            android:src="@drawable/scan_icon" />
                                    </RelativeLayout>
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <TextView
                            android:layout_margin="@dimen/_10sdp"
                            android:background="@drawable/rec"
                            android:id="@+id/code1"
                            android:paddingLeft="@dimen/_5sdp"
                            android:hint="@string/enterscan1"
                            android:text=""
                            android:inputType="text"
                            android:layout_gravity="left|center"
                            android:gravity="center|left"
                            android:maxLength="20"
                            android:singleLine="true"
                            android:textSize="@dimen/_13sdp"
                            android:textColor="@color/black"
                            android:drawablePadding="@dimen/_5sdp"
                            android:drawableTint="@color/black"
                            android:textColorHint="@color/hintcolor"
                            android:drawableLeft="@drawable/qr_icon"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/light_grey"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:layout_margin="@dimen/_1sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                app:cardCornerRadius="@dimen/_10sdp"
                                app:cardBackgroundColor="@color/white"
                                android:backgroundTint="@color/white">
                                <RelativeLayout
                                    android:id="@+id/linear2"
                                    android:background="@color/white"
                                    android:paddingTop="@dimen/_5sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_80sdp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentLeft="true"
                                        android:layout_centerInParent="true"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:layout_marginRight="@dimen/_70sdp"
                                        android:orientation="vertical">

                                        <com.indiasolar.helper.CustomTVBold
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="Scan Battery QR"
                                            android:textColor="@color/black"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:textSize="@dimen/_15sdp"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerInParent="true"
                                        android:layout_marginRight="@dimen/_5sdp">

                                        <ImageView
                                            android:id="@+id/image2"
                                            android:layout_width="@dimen/_60sdp"
                                            android:layout_height="@dimen/_60sdp"
                                            android:layout_centerInParent="true"
                                            android:layout_gravity="center"
                                            android:src="@drawable/scan_icon" />
                                    </RelativeLayout>
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <TextView
                            android:layout_margin="@dimen/_10sdp"
                            android:background="@drawable/rec"
                            android:id="@+id/code2"
                            android:paddingLeft="@dimen/_5sdp"
                            android:hint="@string/enterscan2"
                            android:text=""
                            android:layout_gravity="left|center"
                            android:gravity="center|left"                            android:inputType="text"
                            android:maxLength="20"
                            android:singleLine="true"
                            android:textSize="@dimen/_13sdp"
                            android:textColor="@color/black"
                            android:drawablePadding="@dimen/_5sdp"
                            android:drawableTint="@color/black"
                            android:textColorHint="@color/hintcolor"
                            android:drawableLeft="@drawable/qr_icon"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/light_grey"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:layout_margin="@dimen/_1sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                app:cardCornerRadius="@dimen/_10sdp"
                                app:cardBackgroundColor="@color/white"
                                android:backgroundTint="@color/white">
                                <RelativeLayout
                                    android:id="@+id/linear3"
                                    android:background="@color/white"
                                    android:paddingTop="@dimen/_5sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_80sdp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentLeft="true"
                                        android:layout_centerInParent="true"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:layout_marginRight="@dimen/_70sdp"
                                        android:orientation="vertical">
                                        <com.indiasolar.helper.CustomTVBold
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="Scan Panel QR"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_15sdp"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerInParent="true"
                                        android:layout_marginRight="@dimen/_5sdp">

                                        <ImageView
                                            android:id="@+id/image3"
                                            android:layout_width="@dimen/_60sdp"
                                            android:layout_height="@dimen/_60sdp"
                                            android:layout_centerInParent="true"
                                            android:layout_gravity="center"
                                            android:src="@drawable/scan_icon" />
                                    </RelativeLayout>
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <TextView
                            android:layout_margin="@dimen/_10sdp"
                            android:background="@drawable/rec"
                            android:id="@+id/code3"
                            android:paddingLeft="@dimen/_5sdp"
                            android:hint="@string/enterscan3"
                            android:text=""
                            android:inputType="text"
                            android:maxLength="20"
                            android:layout_gravity="left|center"
                            android:gravity="center|left"
                            android:singleLine="true"
                            android:textSize="@dimen/_13sdp"
                            android:textColor="@color/black"
                            android:drawablePadding="@dimen/_5sdp"
                            android:drawableTint="@color/black"
                            android:textColorHint="@color/hintcolor"
                            android:drawableLeft="@drawable/qr_icon"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"/>
                    </LinearLayout>
                    <com.indiasolar.helper.CustomTVBold
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location Remark"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />
                    <EditText
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@drawable/rec"
                        android:id="@+id/location_remark"
                        android:paddingLeft="@dimen/_5sdp"
                        android:hint="@string/enterlocationremark"
                        android:text=""
                        android:inputType="text"
                        android:maxLength="200"
                        android:maxLines="10"
                        android:singleLine="true"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableTint="@color/black"
                        android:textColorHint="@color/hintcolor"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/image"
                            android:layout_margin="@dimen/_10sdp"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <com.indiasolar.helper.CustomTV
                            android:layout_marginTop="@dimen/_15sdp"
                            android:id="@+id/photoSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:textStyle="bold"
                            android:textSize="@dimen/_16sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:text="@string/submit"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:background="@drawable/button_toolbar"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
</LinearLayout>