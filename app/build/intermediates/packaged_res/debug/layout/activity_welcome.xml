<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/white_back">
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:src="@drawable/app_logo_trans"/>
<com.yellowstar.helper.CustomTVBold
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:visibility="gone"
    android:padding="@dimen/_4sdp"
    android:textSize="@dimen/_23sdp"
    android:textStyle="bold"
    android:textColor="@color/yellow"
    android:text="@string/indiasolar"/>

    <com.yellowstar.helper.CustomTV
        android:layout_marginTop="@dimen/_5sdp"
        android:padding="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/toolbarcolor"
        android:text="Solar Street Light Installation App"/>

    <com.yellowstar.helper.CustomTV
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="@string/logintoaccount"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:orientation="vertical">
        <com.yellowstar.helper.CustomTV
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:textColor="@color/hintdarkcolor"
            android:text="@string/Username"/>
        <EditText
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/rectangle_button"
            android:id="@+id/emailId"
            android:paddingLeft="@dimen/_5sdp"
            android:hint="@string/euser"
            android:text="app_login"
            android:singleLine="true"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/_5sdp"
            android:drawableTint="@color/black"
            android:textColorHint="@color/hintcolor"
            android:drawableLeft="@drawable/email2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:orientation="vertical">

        <com.yellowstar.helper.CustomTV
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:textStyle="bold"
            android:text="@string/password"
            android:textColor="@color/hintdarkcolor"
            android:textSize="@dimen/_12sdp" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
        <EditText
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/rectangle_button"
            android:id="@+id/password"
            android:singleLine="true"
            android:paddingLeft="@dimen/_5sdp"
            android:drawableLeft="@drawable/ic_pass"
            android:drawableTint="@color/black"
            android:textColorHint="@color/hintcolor"
            android:drawablePadding="@dimen/_5sdp"
            android:inputType="textPassword"
            android:text="12345"
            android:hint="@string/pass"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"/>
        <ImageView
            android:id="@+id/passshow"
            android:layout_gravity="end"
            android:tint="@color/black"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:padding="@dimen/_5sdp"/>
        </FrameLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/black"
            android:checked="true"/>

        <com.yellowstar.helper.CustomTV
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center|left"
            android:layout_marginLeft="@dimen/_25sdp"
            android:gravity="center|left"
            android:text="@string/rememberme"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <com.yellowstar.helper.CustomTV
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:text="@string/forgetpass"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />
    </RelativeLayout>
    <LinearLayout
        android:layout_margin="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <com.yellowstar.helper.CustomTV
            android:id="@+id/loginBtn"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_35sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_16sdp"
            android:text="@string/login"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/button_toolbar"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <com.yellowstar.helper.CustomTV
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:gravity="center|left"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/white"
            android:text="@string/donthaveaccount"/>
        <com.yellowstar.helper.CustomTV
            android:paddingLeft="@dimen/_5sdp"
            android:id="@+id/signup"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/white"
            android:text="@string/signup"/>
    </LinearLayout>
</LinearLayout>
    </LinearLayout>
</RelativeLayout>